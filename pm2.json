{
  "apps": {
    "name": "kite-dev",
    "script": "./server/index.js",
    "min_uptime": "60s",
    "max_restarts": 30,
    "exec_mode": "fork_mode",
    "error_file": "./log/pm2_err.log",
    "out_file": "./log/pm2_out.log",
    "pid_file": "./log/pm2_test.pid",
    "watch": [
      "server",
      "db",
      "views",
      "static/_admin",
      "static/_cli",
      "static/_client",
      "static/default"
    ],
    "ignore_watch": ["node_modules", "static/upload"],
    "env": {
      "NODE_ENV": "production"
    }
  }
}
